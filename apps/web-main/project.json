{
  "name": "web-main",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web-main",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project web-reader --web",
  "targets": {
    "build": {
      "options": {
        "assets": [
          "apps/web-reader/public",
          {
            "glob": "**/*",
            "input": "libs/design-system/src/lib/assets",
            "output": "public"
          }
        ]
      }
    },
    "serve": {
      "options": {
        "assets": [
          "apps/web-reader/public",
          {
            "glob": "**/*",
            "input": "libs/design-system/src/lib/assets",
            "output": "public"
          }
        ]
      }
    }
  }
}
