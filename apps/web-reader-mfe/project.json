{
  "name": "web-reader-mfe",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web-reader-mfe",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project web-reader-mfe --web",
  "targets": {
    "copy-assets": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mkdir -p apps/web-reader-mfe/public && cp -r libs/design-system/src/lib/assets/* apps/web-reader-mfe/public/"
      }
    },
    "dev": {
      "dependsOn": ["copy-assets"]
    },
    "build": {
      "dependsOn": ["copy-assets"]
    }
  }
}
