{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@data-access": ["libs/data-access/src/index.ts"],
      "@data-access/ssr": ["libs/data-access/src/ssr.ts"],
      "@design-system": ["libs/design-system/src/index.ts"],
      "@design-system-css": ["libs/design-system/src/lib/theme/global.css"],
      "@lib-canon": ["libs/lib-canon/src/index.ts"],
      "@lib-canon/ssr": ["libs/lib-canon/src/ssr.ts"],
      "@lib-editing": ["libs/lib-editing/src/index.ts"],
      "@lib-editing/fixtures/*": ["libs/lib-editing/src/fixtures/*"],
      "@lib-explore": ["libs/lib-explore/src/index.ts"],
      "@lib-explore/ssr": ["libs/lib-explore/src/ssr.ts"],
      "@lib-glossary": ["libs/lib-glossary/src/index.ts"],
      "@lib-glossary/ssr": ["libs/lib-glossary/src/ssr.ts"],
      "@lib-instr": ["libs/lib-instr/src/index.ts"],
      "@lib-instr/ssr": ["libs/lib-instr/src/ssr.ts"],
      "@lib-search": ["libs/lib-search/src/index.ts"],
      "@lib-user": ["libs/lib-user/src/index.ts"],
      "@lib-user/ssr": ["libs/lib-user/src/ssr.ts"],
      "@lib-utils": ["libs/lib-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
